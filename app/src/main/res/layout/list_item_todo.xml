<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/background_activated">



    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/todo_list_item_solvedCheckBox"
        android:layout_alignParentRight="true"
        android:gravity="center"
        android:enabled="false"
        android:padding="4dp"
        android:focusable="false"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="To Do Title"
        android:id="@+id/todo_list_item_titleTextView"
        android:layout_toLeftOf="@+id/todo_list_item_solvedCheckBox"
        android:textStyle="bold"
        android:paddingRight="4dp"
        android:paddingLeft="4dp"
/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="To Do Date"
        android:id="@+id/todo_list_item_dateTextView"
        android:layout_below="@id/todo_list_item_titleTextView"
        android:layout_toLeftOf="@id/todo_list_item_solvedCheckBox"
        android:paddingLeft="4dp"
        android:paddingRight="4dp"
        android:paddingTop="4dp"/>
</RelativeLayout>